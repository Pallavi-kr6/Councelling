<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mood History</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="flex min-h-screen bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">

  <!-- Include Navbar -->
  <%- include("../partials/navbar") %>

  <!-- Main content -->
  <main class="flex-1 ml-0 md:ml-64 p-6 md:p-10">
    <header class="bg-gradient-to-r from-green-500 to-blue-600 rounded-xl shadow-md p-6 mb-8 text-white">
      <h1 class="text-3xl font-bold mb-2">📈 Mood History</h1>
      <p class="text-green-100">Track your mood patterns and progress over time</p>
    </header>

    <!-- Statistics Overview -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">📊 Your Statistics</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
          <h3 class="font-semibold text-blue-800 dark:text-blue-200 mb-2">Total Entries</h3>
          <p class="text-3xl font-bold text-blue-600"><%= stats.totalEntries %></p>
        </div>
        
        <div class="bg-green-50 dark:bg-green-900/20 p-4 rounded-lg">
          <h3 class="font-semibold text-green-800 dark:text-green-200 mb-2">Average Wellbeing</h3>
          <p class="text-3xl font-bold text-green-600"><%= stats.avgWellbeing %></p>
        </div>
        
        <div class="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg">
          <h3 class="font-semibold text-purple-800 dark:text-purple-200 mb-2">Mood Trend</h3>
          <p class="text-2xl font-bold text-purple-600 capitalize">
            <% if (stats.moodTrend === 'improving') { %>
              📈 Improving
            <% } else if (stats.moodTrend === 'declining') { %>
              📉 Declining
            <% } else { %>
              ➡️ Stable
            <% } %>
          </p>
        </div>
        
        <div class="bg-yellow-50 dark:bg-yellow-900/20 p-4 rounded-lg">
          <h3 class="font-semibold text-yellow-800 dark:text-yellow-200 mb-2">Best Day</h3>
          <p class="text-lg font-bold text-yellow-600">
            <% if (stats.bestDay) { %>
              <%= new Date(stats.bestDay.date).toLocaleDateString() %>
              <br><span class="text-sm">Score: <%= stats.bestDay.wellbeingScore %></span>
            <% } else { %>
              N/A
            <% } %>
          </p>
        </div>
      </div>
    </section>

    <!-- Mood Chart -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">📈 Mood Trends</h2>
      
      <div class="h-96">
        <canvas id="moodChart"></canvas>
      </div>
    </section>

    <!-- Top Tags -->
    <% if (stats.topTags && stats.topTags.length > 0) { %>
      <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-8">
        <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">🏷️ Most Common Tags</h2>
        
        <div class="flex flex-wrap gap-3">
          <% stats.topTags.forEach(tag => { %>
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-2 rounded-full flex items-center">
              <span class="font-semibold"><%= tag.tag %></span>
              <span class="ml-2 bg-white/20 px-2 py-1 rounded-full text-sm"><%= tag.count %></span>
            </div>
          <% }) %>
        </div>
      </section>
    <% } %>

    <!-- Mood Entries List -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-8">
      <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">📅 All Entries</h2>
      
      <% if (moodHistory && moodHistory.length > 0) { %>
        <div class="space-y-4">
          <% moodHistory.forEach(mood => { %>
            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
              <div class="flex justify-between items-start mb-3">
                <h3 class="font-semibold text-gray-900 dark:text-white text-lg">
                  <%= new Date(mood.date).toLocaleDateString('en-US', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  }) %>
                </h3>
                <div class="text-right">
                  <span class="text-sm text-gray-500">Wellbeing Score</span>
                  <p class="text-2xl font-bold text-blue-600"><%= mood.wellbeingScore %></p>
                </div>
              </div>
              
              <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-4">
                <div class="text-center">
                  <div class="text-2xl mb-1"><%= mood.getMoodEmoji() %></div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">Mood</div>
                  <div class="font-bold text-blue-600"><%= mood.mood %></div>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl mb-1"><%= mood.getEnergyEmoji() %></div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">Energy</div>
                  <div class="font-bold text-green-600"><%= mood.energy %></div>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl mb-1"><%= mood.getStressEmoji() %></div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">Stress</div>
                  <div class="font-bold text-red-600"><%= mood.stress %></div>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl mb-1">💤</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">Sleep</div>
                  <div class="font-bold text-purple-600"><%= mood.sleep %></div>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl mb-1">👥</div>
                  <div class="text-sm text-gray-600 dark:text-gray-400">Social</div>
                  <div class="font-bold text-yellow-600"><%= mood.social %></div>
                </div>
              </div>
              
              <% if (mood.notes) { %>
                <div class="bg-gray-50 dark:bg-gray-700 p-3 rounded-lg mb-3">
                  <p class="text-gray-700 dark:text-gray-300 text-sm"><%= mood.notes %></p>
                </div>
              <% } %>
              
              <% if (mood.tags && mood.tags.length > 0) { %>
                <div class="flex flex-wrap gap-2">
                  <% mood.tags.forEach(tag => { %>
                    <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 text-sm rounded-full">
                      <%= tag %>
                    </span>
                  <% }) %>
                </div>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">📊</div>
          <h3 class="text-xl font-semibold text-gray-600 dark:text-gray-400 mb-2">No mood entries yet</h3>
          <p class="text-gray-500 dark:text-gray-500">Start tracking your mood to see your history here!</p>
          <a href="/mood" class="inline-block mt-4 bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
            Start Tracking
          </a>
        </div>
      <% } %>
    </section>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-4">
      <a href="/mood" 
         class="flex-1 bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition text-center">
        📝 Add Today's Mood
      </a>
      <a href="/mood/report" 
         class="flex-1 bg-purple-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-purple-700 transition text-center">
        📊 Weekly Report
      </a>
    </div>
  </main>

  <!-- Scripts -->
  <script>
    // Create mood chart
    const ctx = document.getElementById('moodChart').getContext('2d');
    const moodData = <%- JSON.stringify(moodHistory.map(mood => ({
      date: new Date(mood.date).toLocaleDateString(),
      mood: mood.mood,
      energy: mood.energy,
      stress: mood.stress,
      sleep: mood.sleep,
      social: mood.social,
      wellbeing: mood.wellbeingScore
    })).reverse()) %>;

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: moodData.map(d => d.date),
        datasets: [
          {
            label: 'Mood',
            data: moodData.map(d => d.mood),
            borderColor: 'rgb(59, 130, 246)',
            backgroundColor: 'rgba(59, 130, 246, 0.1)',
            tension: 0.4
          },
          {
            label: 'Energy',
            data: moodData.map(d => d.energy),
            borderColor: 'rgb(34, 197, 94)',
            backgroundColor: 'rgba(34, 197, 94, 0.1)',
            tension: 0.4
          },
          {
            label: 'Stress',
            data: moodData.map(d => d.stress),
            borderColor: 'rgb(239, 68, 68)',
            backgroundColor: 'rgba(239, 68, 68, 0.1)',
            tension: 0.4
          },
          {
            label: 'Sleep',
            data: moodData.map(d => d.sleep),
            borderColor: 'rgb(147, 51, 234)',
            backgroundColor: 'rgba(147, 51, 234, 0.1)',
            tension: 0.4
          },
          {
            label: 'Social',
            data: moodData.map(d => d.social),
            borderColor: 'rgb(234, 179, 8)',
            backgroundColor: 'rgba(234, 179, 8, 0.1)',
            tension: 0.4
          },
          {
            label: 'Wellbeing Score',
            data: moodData.map(d => d.wellbeing),
            borderColor: 'rgb(236, 72, 153)',
            backgroundColor: 'rgba(236, 72, 153, 0.1)',
            tension: 0.4,
            borderWidth: 3
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            max: 10,
            ticks: {
              stepSize: 1
            }
          }
        },
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Your Mood Journey Over Time'
          }
        }
      }
    });

    // Dark mode toggle
    window.toggleDarkMode = function () {
      const isDark = document.documentElement.classList.toggle("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    // Apply saved theme
    (function applySavedTheme() {
      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    })();
  </script>
</body>
</html>
