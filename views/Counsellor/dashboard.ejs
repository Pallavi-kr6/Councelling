<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= counsellor.name %>'s Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">

<div class="container mx-auto mt-10 px-4">
  <div class="bg-white shadow-md rounded-lg p-6">
    <!-- Header -->
    <div class="mb-6">
      <h2 class="text-3xl font-bold text-blue-600 mb-2"><%= counsellor.name %>'s Dashboard</h2>
      <p class="text-gray-600"><span class="font-semibold">Specialization:</span> <%= counsellor.specialization || "N/A" %></p>
      <p class="text-gray-600"><span class="font-semibold">Email:</span> <%= counsellor.email %></p>
      <p class="text-gray-600"><span class="font-semibold">Qualifications:</span> <%= counsellor.qualifications %></p>
    </div>

    <!-- Date Selector -->
    <div class="mb-6">
      <label for="date" class="block text-sm font-medium text-gray-700 mb-2">Select Date:</label>
      <input type="date" 
             id="date" 
             name="date" 
             value="<%= selectedDate %>"
             class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
             onchange="window.location.href='/counsellor/dashboard?date=' + this.value">
    </div>

    <!-- Bookings Section -->
    <div class="mb-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Bookings for <%= new Date(selectedDate).toLocaleDateString() %></h3>
      
      <% if (bookings && bookings.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% bookings.forEach(booking => { %>
            <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-md shadow-sm">
              <div class="flex justify-between items-start mb-3">
                <h4 class="font-semibold text-blue-700">ðŸ“Œ Booking Details</h4>
                <span class="inline-block bg-blue-500 text-white text-xs px-2 py-1 rounded-full">Booked</span>
              </div>
              
              <div class="space-y-2 text-sm">
                <div>
                  <span class="font-semibold text-gray-700">Name:</span> 
                  <span class="text-gray-600"><%= booking.user.name %></span>
                </div>
                <div>
                  <span class="font-semibold text-gray-700">Email:</span> 
                  <span class="text-gray-600"><%= booking.user.email %></span>
                </div>
                <div>
                  <span class="font-semibold text-gray-700">Instagram ID:</span> 
                  <span class="text-gray-600"><%= booking.user.Instagram || "N/A" %></span>
                </div>
                <div>
                  <span class="font-semibold text-gray-700">Course:</span> 
                  <span class="text-gray-600"><%= booking.user.course %></span>
                </div>
                <div>
                  <span class="font-semibold text-gray-700">Year:</span> 
                  <span class="text-gray-600"><%= booking.user.year %></span>
                </div>
                <div>
                  <span class="font-semibold text-gray-700">Booked Slot:</span> 
                  <span class="inline-block bg-blue-500 text-white text-sm px-2 py-1 rounded-full"><%= booking.slot %></span>
                </div>
                <div>
                  <span class="font-semibold text-gray-700">Date:</span> 
                  <span class="text-gray-600"><%= new Date(booking.date).toLocaleDateString() %></span>
                </div>
                <div>
                  <span class="font-semibold text-gray-700">Status:</span> 
                  <% if (booking.attended) { %>
                    <span class="text-green-600 font-medium">Attended</span>
                  <% } else { %>
                    <span class="text-yellow-600 font-medium">Upcoming</span>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-md shadow-sm">
          <p class="text-yellow-700">No bookings for <%= new Date(selectedDate).toLocaleDateString() %>.</p>
        </div>
      <% } %>
    </div>

    <!-- Weekly Schedule Overview -->
    <div class="mb-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Weekly Schedule</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% 
          const days = ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'];
          const dayNames = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
        %>
        <% days.forEach((day, index) => { %>
          <% const daySlots = counsellor.weeklySchedule?.[day] || []; %>
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
            <h4 class="font-semibold text-gray-700 mb-2"><%= dayNames[index] %></h4>
            <% if (daySlots.length > 0) { %>
              <div class="space-y-1">
                <% daySlots.forEach(slot => { %>
                  <div class="text-sm text-gray-600 bg-white border border-gray-200 rounded px-2 py-1">
                    <%= slot %>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <p class="text-sm text-gray-500 italic">Not available</p>
            <% } %>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Slot Availability for Selected Date -->
    <div class="mb-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-4">Slot Availability for <%= new Date(selectedDate).toLocaleDateString() %></h3>
      <% 
        const selectedDateObj = new Date(selectedDate);
        const dayKeys = ['sunday', 'monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday'];
        const dayOfWeek = dayKeys[selectedDateObj.getDay()];
        const availableSlotsForDay = counsellor.weeklySchedule?.[dayOfWeek] || [];
      %>
      
      <% if (availableSlotsForDay.length > 0) { %>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <% availableSlotsForDay.forEach(slot => { %>
            <% 
              const isBooked = bookings.some(b => b.slot === slot);
            %>
            <div class="p-3 rounded-lg border text-center
                        <%= isBooked ? 'bg-red-100 border-red-300 text-red-800' 
                          : 'bg-green-100 border-green-300 text-green-800' %>">
              <div class="font-medium"><%= slot %></div>
              <div class="text-xs mt-1">
                <%= isBooked ? 'Booked' : 'Available' %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="bg-gray-100 border border-gray-300 rounded-lg p-4 text-center">
          <p class="text-gray-600">No slots available on <%= dayOfWeek.charAt(0).toUpperCase() + dayOfWeek.slice(1) %></p>
        </div>
      <% } %>
    </div>

    <!-- Actions -->
    <div class="flex gap-4">
      <a href="/counsellor/logout" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition">
        Logout
      </a>
    </div>
  </div>
</div>
</body>
</html>