<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Counselling App</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    // Tailwind dark mode config
    tailwind.config = {
      darkMode: 'class'
    }

    function toggleDarkMode() {
      document.documentElement.classList.toggle('dark');
      // Optionally save preference in localStorage
      localStorage.setItem('theme', document.documentElement.classList.contains('dark') ? 'dark' : 'light');
    }

    // Load saved preference
    if (localStorage.getItem('theme') === 'dark') {
      document.documentElement.classList.add('dark');
    }
  </script>
</head>
<body class="flex min-h-screen font-sans bg-gray-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-300">

  <!-- Sidebar -->
  <aside class="fixed w-64 h-full bg-gray-200 dark:bg-gray-800 text-gray-900 dark:text-white flex flex-col items-center py-8 px-4 shadow-lg">
    <div class="w-24 h-24 bg-gray-300 dark:bg-gray-700 rounded-full mb-4 flex items-center justify-center text-4xl font-bold shadow-inner text-gray-900 dark:text-white">
      ðŸ‘¤
    </div>
    <h3 class="text-xl font-semibold mb-1 text-center"><%= user ? user.name : "Guest" %></h3>
    <p class="text-sm mb-4 text-center text-gray-600 dark:text-gray-400"><%= user ? user.email : "" %></p>
    
    <button onclick="toggleDarkMode()" class="w-full bg-gray-400 dark:bg-gray-600 hover:bg-gray-300 dark:hover:bg-gray-500 py-2 rounded mb-3 transition-all shadow text-gray-900 dark:text-white">Change Mode</button>

    <a href="/home" class="w-full text-center bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 py-2 rounded mb-3 transition-all shadow text-white">Home</a>
    <a href="/counsellors" class="w-full text-center bg-green-600 hover:bg-green-500 dark:bg-green-700 dark:hover:bg-green-600 py-2 rounded transition-all shadow text-white">Find a Counsellor</a>
  </aside>

  <!-- Main content -->
  <main class="flex-1 ml-0 md:ml-64 p-6 md:p-10">
    <!-- Header -->
    <header class="bg-gray-100 dark:bg-gray-800 rounded-xl shadow-md p-6 mb-8 transition-colors duration-300">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Student Counselling App</h1>
      <p class="text-gray-700 dark:text-gray-300 mt-2 text-lg">
        How are you feeling today, <span class="text-teal-500 dark:text-teal-400 font-semibold"><%= user ? user.name : "Guest" %></span>?
      </p>
    </header>

    <!-- Booked Counsellors Section -->
    <section>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white mb-6">Booked Counsellors</h2>

      <% if (counsellors && counsellors.length > 0 && counsellors.some(c => c.booked)) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% counsellors.filter(c => c.booked).forEach(c => { %>
            <div class="bg-gray-100 dark:bg-gray-800 rounded-xl shadow-lg p-6 hover:scale-105 transform transition duration-300">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white"><%= c.name %></h3>
                <span class="bg-green-600 text-white text-sm px-2 py-1 rounded-full font-semibold">Booked</span>
              </div>
              <p class="text-gray-700 dark:text-gray-300 mb-1"><strong>Category:</strong> <%= c.category %></p>
              <p class="text-gray-700 dark:text-gray-300 mb-1"><strong>Slot:</strong> <%= c.selectedSlot %></p>
              <p class="text-gray-700 dark:text-gray-300 mb-1"><strong>Contact:</strong> <%= c.contact %></p>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-500 dark:text-gray-400 text-lg">You haven't booked any counsellors yet.</p>
      <% } %>
    </section>
  </main>

</body>
</html>
